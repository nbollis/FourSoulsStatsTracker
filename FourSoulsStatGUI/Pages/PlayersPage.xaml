<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FourSoulsStatGUI.Pages.PlayersPage"
             xmlns:local="clr-namespace:FourSoulsStatGUI"
             Title="PlayersPage">
    <ContentPage.BindingContext>
        <local:PlayerPageViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="*, 2*">
        
        <!-- List of Players -->
        <ListView  Grid.Row="0" ItemsSource="{Binding Players}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <local:PlayerCharacterListItemView></local:PlayerCharacterListItemView>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Selected Player -->
        <Grid>

        </Grid>

    </Grid>


</ContentPage>