<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:fourSoulsCore="clr-namespace:FourSoulsCore;assembly=FourSoulsCore"
             x:Class="FourSoulsStatGUI.PlayerCharacterListItemView">

    <ContentView.BindingContext>
        <fourSoulsCore:Player />
    </ContentView.BindingContext>

    <Grid RowDefinitions="2*, *">

        <!-- Image and Name -->
        <HorizontalStackLayout Grid.Row="0">

            <Image />

            <Label Text="{Binding Name}" />
        </HorizontalStackLayout>

        <!-- Win rate Display -->
        <Grid ColumnDefinitions="4*, *" Grid.Row="1">

            <ProgressBar Grid.Column="0" Progress="{Binding WinRate}"/>

            <Label Grid.Column="1" Text="{Binding WinRate}" />
        </Grid>

    </Grid>
</ContentView>
