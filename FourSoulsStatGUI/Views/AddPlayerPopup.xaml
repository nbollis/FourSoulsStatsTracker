<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               xmlns:local="clr-namespace:FourSoulsStatGUI"
               x:Class="FourSoulsStatGUI.AddPlayerPopup"
               x:DataType="local:PopupViewModel"
               CanBeDismissedByTappingOutsideOfPopup="False">

    <Grid RowDefinitions="*, *, Auto">

        <Label Grid.Row="0" Text="Enter Player's Name"></Label>

        <Entry Placeholder="New Player" Style="{StaticResource TextEntry}"
               Text="{Binding InputText}">

        </Entry>

        <!-- Buttons --> 
        <Button Text="OK" Grid.Row="1"
                Clicked="OnOKButtonClicked"></Button>
    </Grid>

</toolkit:Popup>

